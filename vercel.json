{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "creator-analytics",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "cd frontend && npm install",
  "regions": ["iad1"],
  "functions": {
    "frontend/app/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.creator-analytics.com"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.creator-analytics.com/api/$1"
    }
  ]
}
